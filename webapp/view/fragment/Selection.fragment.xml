<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield">
    <smartForm:SmartForm
        id="SmartForm"
        editTogglable="false"
        validationMode="Async"
        editable="true"
    >
        <smartForm:layout>
            <smartForm:ColumnLayout
                columnsM="1"
                columnsL="1"
                columnsXL="1"
            />
        </smartForm:layout>
        <smartForm:Group>
            <smartForm:GroupElement>
                <smartField:SmartField
                    id="ProjectExternalID"
                    value="{ProjectExternalID}"
                />
            </smartForm:GroupElement>

            <smartForm:GroupElement>
                <smartField:SmartField
                    id="ReportingMonth"
                    value="{ path: 'ReportingMonth',
                        type: 'sap.ui.model.odata.type.DateTime',
                        formatOptions: {
                        'UTC': true,
                        pattern: 'yyyy-MM'
                        }
                        }"
                />
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField
                    id="CutOffDate"
                    value="{CutOffDate}"
                />
            </smartForm:GroupElement>
            <smartForm:GroupElement
                label="Line Items"
            >
                <Switch
                    state="{path: 'IsLineItemsRequested', formatter: '.formatBooleanFromString'}"
                    change="onLineItemsRequestedChange"
                    customTextOn="Yes"
                    customTextOff="No"
                    tooltip="Toggle to include line items in the report"
                />
            </smartForm:GroupElement>
            <!-- <smartForm:GroupElement>
                <smartField:SmartField
                    id="Zhcvrmon2"
                    value="{ProjectExternalID}"
                />
            </smartForm:GroupElement> -->
        </smartForm:Group>
        <smartForm:Group />
    </smartForm:SmartForm>
</core:FragmentDefinition>