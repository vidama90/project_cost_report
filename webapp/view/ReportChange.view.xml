<mvc:View
    controllerName="com.atg.ppm.postfinrevenue.controller.ReportChange"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap">
    
    <Page id="changePage" showNavButton="true" navButtonPress=".onNavBack">
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button icon="sap-icon://nav-back" press=".onNavBack" type="Transparent"/>
                </contentLeft>
                <contentMiddle>
                    <Title text="{i18n>change}" level="H1" class="sapUiNoMargin"/>
                </contentMiddle>
                <contentRight>
                    <core:Icon src="sap-icon://edit" color="#e9730c" size="1.25rem"/>
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <uxap:ObjectPageLayout
                id="ObjectPageLayout"
                upperCaseAnchorBar="false"
                showFooter="true">
                
                <!-- <uxap:headerTitle>
                    <uxap:ObjectPageDynamicHeaderTitle>
                        <uxap:expandedHeading>
                            <HBox>
                                <Title text="{i18n>changeReport}" wrapping="true"/>
                            </HBox>
                        </uxap:expandedHeading>
                    </uxap:ObjectPageDynamicHeaderTitle>
                </uxap:headerTitle> -->
                
                <!-- Same sections as in ReportCreate.view.xml -->
                <uxap:sections>
                    <uxap:ObjectPageSection id="Section1" titleUppercase="false" title="{i18n>section1}">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection title="" titleUppercase="false">
                                <uxap:blocks>
                                    <core:Fragment fragmentName="com.atg.ppm.postfinrevenue.view.fragment.HeaderForm" type="XML"/>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>
                    
                    <!-- Same remaining sections as above -->
                    <uxap:ObjectPageSection id="Section2" titleUppercase="false" title="{i18n>section2}">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection titleUppercase="false">
                                <uxap:blocks>
                                    <core:Fragment fragmentName="com.atg.ppm.postfinrevenue.view.fragment.HeaderItemTable" type="XML"/>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>

                    <uxap:ObjectPageSection id="Section3" titleUppercase="false" title="{i18n>section3}">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection titleUppercase="false">
                                <uxap:blocks>
                                    <core:Fragment fragmentName="com.atg.ppm.postfinrevenue.view.fragment.ValuationTable" type="XML"/>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>

                    <uxap:ObjectPageSection id="Section4" titleUppercase="false" title="{i18n>section4}">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection titleUppercase="false">
                                <uxap:blocks>
                                    <core:Fragment fragmentName="com.atg.ppm.postfinrevenue.view.fragment.CostSummaryTable" type="XML"/>
                                    <core:Fragment fragmentName="com.atg.ppm.postfinrevenue.view.fragment.CostItemTable" type="XML"/>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>
                </uxap:sections>
                
                <uxap:footer>
                    <OverflowToolbar>
                        <ToolbarSpacer/>
                        <!-- <Button
                            icon="sap-icon://reset"
                            type="Transparent"
                            text="{i18n>resetButtn}"
                            press=".onClickReset"/> -->
                        <Button
                            icon="sap-icon://refresh"
                            type="Refresh"
                            text="{i18n>refresheButtn}"
                            press=".onClickRefresh"/>
                        <Button
                            type="Accept"
                            text="{i18n>updateButtn}"
                            press=".onPressUpdateReport"/>
                        <Button
                            type="Reject"
                            text="{i18n>closeButtn}"
                            press=".onNavBack"/>
                    </OverflowToolbar>
                </uxap:footer>
            </uxap:ObjectPageLayout>
        </content>
    </Page>
</mvc:View>