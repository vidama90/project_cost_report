<mvc:View
    controllerName="com.atg.ppm.postfinrevenue.controller.ProjectCostReport"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:uxap="sap.uxap"
    xmlns:blockcolor="sap.uxap.sample.SharedBlocks"
    xmlns:table="sap.ui.table"
>
    <Page id="page">
        <Panel visible="{ViewControl>/SelectionScreen/IsVisible}">
            <FlexBox
                height="50px"
                alignItems="Start"
                justifyContent="End"
            >
                <Button
                    text="Create"
                    icon="sap-icon://add"
                    type="Emphasized"
                    class="sapUiSmallMarginEnd"
                    press=".onPressCreate"
                />
                <Button
                    text="Change"
                    icon="sap-icon://edit"
                    type="Emphasized"
                    class="sapUiSmallMarginEnd"
                    press="onPressChange"
                />
                <Button
                    text="Display"
                    icon="sap-icon://show"
                    type="Emphasized"
                    class="sapUiSmallMarginEnd"
                    press="onPressDisplay"
                />
            </FlexBox>
            <FlexBox
                height="auto"
                alignItems="Start"
                justifyContent="Start"
            >
                <VBox width="75%">
                    <core:Fragment
                        fragmentName="com.atg.ppm.postfinrevenue.view.fragment.Selection"
                        type="XML"
                    />
                </VBox>
            </FlexBox>
        </Panel>

        
    </Page>
</mvc:View>
